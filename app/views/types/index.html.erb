<% content_for :title do %>3rd Edition Types<% end%>

<table>
  <tr>
    <th>Name</th>
	<th>Count</th>
  </tr>

<% for type in @types %>
  <tr>
    <td><span class="abbreviation"><%= link_to h(type.name), type %></span></td>
	<td><span class="abbreviation"><%= type.miniatures.size %></span></td>
    <td><%= link_to 'Edit', edit_type_path(type) if is_admin? %></td>
    <td><%= link_to 'Destroy', type, :confirm => 'Are you sure?', :method => :delete if is_admin? %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New type', new_type_path if is_admin? %>
