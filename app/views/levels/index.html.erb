<% content_for :title do %>4th Edition Level<% end %>

<table>
	<tr>
		<th>Level</th>
		<th>Count</th>
	</tr>
<% for level in @levels %>
	<% if Miniature.level(level).size > 0 %>
	<tr>
		<td><span class="abbreviation"><%= link_to "Level #{level}", :action => 'show', :id => level %></span></td>
		<td><span class="abbreviation"><%= Miniature.level(level).size %></span></td>
	</tr>
	<% end %>
<% end %>
</table>
