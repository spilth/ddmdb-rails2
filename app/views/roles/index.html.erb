<% content_for :title do %>4th Edition Roles<% end %>

<table>
  <tr>
    <th>Name</th>
	<th>Count</th>
  </tr>

<% for role in @roles %>
  <tr>
    <td><span class="abbreviation"><%= link_to h(role.name), role %></span></td>
    <td><span class="abbreviation"><%= role.miniatures.size %></span></td>
    <td><%= link_to 'Edit', edit_role_path(role) if is_admin? %></td>
    <td><%= link_to 'Destroy', role, :confirm => 'Are you sure?', :method => :delete if is_admin? %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New role', new_role_path if is_admin? %>
