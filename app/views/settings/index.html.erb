<% content_for :title do %>Campaign Settings<% end %>

<table>
  <tr>
    <th>Name</th>
    <th>Abbreviation</th>
	<th>Count</th>
  </tr>

<% for setting in @settings %>
  <tr>
    <td><span class="abbreviation"><%= link_to h(setting.name), setting %></span></td>
    <td><span class="abbreviation"><%=h setting.abbreviation %></span></td>
	<td><span class="abbreviation"><%= setting.miniatures.size %></span></td>
    <td><%= link_to 'Edit', edit_setting_path(setting) if is_admin? %></td>
    <td><%= link_to 'Destroy', setting, :confirm => 'Are you sure?', :method => :delete if is_admin? %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New setting', new_setting_path if is_admin? %>
