<% if @comments.size > 0 %>
	<% for comment in @comments %>
		<div class="comment">
			<% if !comment.title.blank? %><h4><%= h(comment.title) %></h4><% end %>
			<p><%= h(comment.comment) %></p>
			<p><%= comment.created_at.strftime("%b %d %Y @ %H:%M") %> by <%= link_to comment.user.login, "/users/#{comment.user_id}" %> about <%= link_to h(comment.commentable.name), comment.commentable %></p>
			<%= link_to 'Delete', comment, :confirm => 'Are you sure?', :method => :delete if is_admin? %>
		</div>
	<% end %>
<% else %>
	<p>No comments for this miniature.</p>
<% end %>
