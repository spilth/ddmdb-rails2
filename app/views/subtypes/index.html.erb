<% content_for :title do %>3rd Edition Subtypes<% end%>

<table>
  <tr>
    <th>Name</th>
	<th>Count</th>
  </tr>

<% for subtype in @subtypes %>
  <tr>
    <td><span class="abbreviation"><%= link_to h(subtype.name), subtype %></span></td>
	<td><span class="abbreviation"><%= subtype.miniatures.size %></span></td>
    <td><%= link_to 'Edit', edit_subtype_path(subtype) if is_admin? %></td>
    <td><%= link_to 'Destroy', subtype, :confirm => 'Are you sure?', :method => :delete if is_admin? %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New subtype', new_subtype_path if is_admin? %>
