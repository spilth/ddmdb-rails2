<% content_for :title do %>Releases<% end%>

<table>
  <tr>
	<th>Symbol</th>
    <th>Name</th>
    <th><span title="Abbreviation">Abrv</span></th>
	<th>Count</th>
  </tr>

<% for release in @releases %>
  <tr>
	<td><%= link_to release_thumbnail(release), release, :title=> release.name %></td>
    <td><span class="abbreviation"><%= link_to h(release.name), release %></span><br/>
		<%= link_to 'Edit', edit_release_path(release) if is_admin? %> <%= link_to 'Destroy', release, :confirm => 'Are you sure?', :method => :delete if is_admin? %></td>
    <td><span class="abbreviation"><%=h release.abbreviation %></span></td>
	<td><span class="abbreviation"><%= release.miniatures.size %></span></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New release', new_release_path if is_admin? %>
