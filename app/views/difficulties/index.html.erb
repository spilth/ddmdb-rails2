<% content_for :title do %>4th Edition Difficulties<% end %>

<table>
  <tr>
    <th>Name</th>
	<th>Count</th>
  </tr>

<% for difficulty in @difficulties %>
  <tr>
    <td><span class="abbreviation"><%=link_to h(difficulty.name), difficulty %></span></td>
	<td><span class="abbreviation"><%= difficulty.miniatures.size %></span></td>
    <td><%= link_to 'Edit', edit_difficulty_path(difficulty) if is_admin? %></td>
    <td><%= link_to 'Destroy', difficulty, :confirm => 'Are you sure?', :method => :delete if is_admin? %></td>
  </tr>
<% end %>
</table>

<p><%= link_to 'New difficulty', new_difficulty_path if is_admin? %></p>
